<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/base_padding"
    android:layout_marginTop="@dimen/base_padding">
    <ImageView
        android:id="@+id/iv_synthetical_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/synthetical_mark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_size"
        android:textColor="@color/black"
        android:text="综合评分"
        android:layout_toRightOf="@id/iv_synthetical_mark"
        android:layout_marginLeft="@dimen/base_padding"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/province_line_border"
        android:layout_below="@id/iv_synthetical_mark"
        android:layout_marginTop="@dimen/base_padding"/>

    <TextView
        android:id="@+id/tv_logistics_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="物流服务"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@id/tv_description"
        android:layout_marginTop="@dimen/base_padding"/>
    <LinearLayout
        android:id="@+id/ll_logistics_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_description"
        android:layout_toRightOf="@id/tv_logistics_service"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding">
        <ImageView
            android:id="@+id/image_logistics_service1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_logistics_service2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_logistics_service3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_logistics_service4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_logistics_service5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logistics_satisfaction_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/text_gray"
        android:layout_below="@id/tv_description"
        android:layout_toRightOf="@id/ll_logistics_service"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="描述相符"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@id/line"
        android:layout_marginTop="@dimen/base_padding"/>
    <LinearLayout
        android:id="@+id/ll_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line"
        android:layout_toRightOf="@id/tv_description"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding">
        <ImageView
            android:id="@+id/image_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_description5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
    </LinearLayout>

    <TextView
        android:id="@+id/description_satisfaction_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/text_gray"
        android:layout_below="@id/line"
        android:layout_toRightOf="@id/ll_description"
        android:text="非常满意"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding"/>

    <TextView
        android:id="@+id/tv_service_attitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务态度"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size"
        android:layout_below="@id/tv_logistics_service"
        android:layout_marginTop="@dimen/base_padding"/>
    <LinearLayout
        android:id="@+id/ll_service_attitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_logistics_service"
        android:layout_toRightOf="@id/tv_service_attitude"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding">
        <ImageView
            android:id="@+id/image_service_attitude1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_service_attitude2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_service_attitude3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_service_attitude4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
        <ImageView
            android:id="@+id/image_service_attitude5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_collect"
            android:layout_marginLeft="@dimen/small_padding"/>
    </LinearLayout>

    <TextView
        android:id="@+id/attitude_satisfaction_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/text_gray"
        android:layout_below="@id/tv_logistics_service"
        android:layout_toRightOf="@id/ll_service_attitude"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginLeft="@dimen/base_padding"/>

</RelativeLayout>
