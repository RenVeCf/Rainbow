<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/base_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_order_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_order_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_btn_cancel"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/base_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_order_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_btn_cancel"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/base_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_order_button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_btn_cancel"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/small_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/base_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_order_button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_btn_payment"
                android:paddingBottom="@dimen/small_padding"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="@dimen/small_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/base_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
