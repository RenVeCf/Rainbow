<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_empty_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        android:src="@mipmap/empty_cart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_empty_cart"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/base_padding"
        android:text="购物车空空如也"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_empty_cart" />

    <TextView
        android:id="@+id/tv_empty_cart_hint"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/base_padding"
        android:text="在忙，也得记得买点什么犒赏您的爱宠"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_cart" />
    <TextView
        android:id="@+id/tv_go_shopping"
        style="@style/BaseTextStyle"
        android:layout_width="100dp"
        android:textColor="@color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/base_padding"
        android:text="去逛逛"
        android:background="@drawable/shape_buy_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_empty_cart_hint" />


</android.support.constraint.ConstraintLayout>