<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_empty_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/empty_cart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_empty_cart"
            style="@style/TitleTextStyle"
            android:layout_marginTop="@dimen/base_padding"
            android:text="购物车空空如也"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_empty_cart" />

        <TextView
            android:id="@+id/tv_empty_cart_hint"
            style="@style/BaseTextStyle"
            android:layout_marginTop="@dimen/base_padding"
            android:text="再忙，也得记得买点什么犒赏您的爱宠"
            android:textColor="@color/LightGrey"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_empty_cart" />

        <TextView
            android:id="@+id/tv_go_shopping"
            style="@style/BaseTextStyle"
            android:layout_width="100dp"
            android:layout_marginTop="@dimen/base_padding"
            android:background="@drawable/shape_buy_bg"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="去逛逛"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_empty_cart_hint" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>