<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.ipd.taxiu.widget.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <View
        android:id="@+id/view_line"
        style="@style/ViewLine" />

    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_kefu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="@dimen/base_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kefu_icon" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginTop="3dp"
                android:text="客服"
                android:textColor="@color/LightGrey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/base_padding"
            android:paddingRight="24dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/product_collect_normal" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginTop="3dp"
                android:text="收藏"
                android:textColor="@color/LightGrey" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_cart"
            style="@style/BaseTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_product_detail_btn_left_bg"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_buy"
            style="@style/BaseTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="@dimen/base_padding"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_product_detail_btn_right_bg"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>
