<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/HomeCardStyle">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_padding">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_classroom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hot_classroom_icon"
                app:layout_constraintBottom_toBottomOf="@id/tv_hint"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_hint" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/tv_hint"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_hint" />

            <TextView
                android:id="@+id/tv_hint"
                style="@style/TitleTextStyle"
                android:layout_width="0dp"
                android:layout_marginLeft="4dp"
                android:text="热门课堂"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@id/icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <com.ipd.taxiu.widget.ClassRoomLayout
            android:id="@+id/classroom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@id/cl_classroom_title" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
