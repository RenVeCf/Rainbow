<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        style="@style/TitleTextStyle"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="你家主子有什么特别的撒娇方式?"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/SmallTextStyle"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="毛孩子都天生自带萌属性，有些则有自己独特的撒娇卖萌方式:抱着人腿或手臂就不松手，是小妖精变得吧"
        android:textColor="@color/LightGrey"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <com.ipd.taxiu.widget.RoundImageView
        android:id="@+id/iv_classroom_image"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_image_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/hot_topic_img"
        app:corner_radius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:type="round" />

    <LinearLayout
        android:layout_marginTop="@dimen/small_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_classroom_image">

        <TextView
            android:id="@+id/tv_viewers_num"
            style="@style/SmallTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/views_icon"
            android:drawablePadding="8dp"
            android:text="3243"
            android:textColor="@color/LightGrey" />
        <TextView
            android:id="@+id/tv_comment_num"
            style="@style/SmallTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/comment_icon"
            android:drawablePadding="8dp"
            android:text="924"
            android:textColor="@color/LightGrey" />
        <TextView
            android:id="@+id/tv_collect_num"
            style="@style/SmallTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/collect_normal"
            android:drawablePadding="8dp"
            android:text="284"
            android:textColor="@color/LightGrey" />
        <TextView
            android:id="@+id/tv_zan_num"
            style="@style/SmallTextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/zan_icon"
            android:drawablePadding="8dp"
            android:text="537"
            android:textColor="@color/LightGrey" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>