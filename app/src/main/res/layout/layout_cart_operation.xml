<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_cart_operation_bg">

    <RelativeLayout
        android:id="@+id/rl_sub"
        android:layout_width="@dimen/cart_operation_height"
        android:layout_height="@dimen/cart_operation_height"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/iv_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/selector_cart_sub" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_num"
        style="@style/SmallTextStyle"
        android:layout_width="40dp"
        android:layout_height="@dimen/cart_operation_height"
        android:gravity="center"
        android:maxLength="5"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@id/rl_sub" />

    <RelativeLayout
        android:id="@+id/rl_add"
        android:layout_width="@dimen/cart_operation_height"
        android:layout_height="@dimen/cart_operation_height"
        app:layout_constraintLeft_toRightOf="@id/tv_num">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/cart_add" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>