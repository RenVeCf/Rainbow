<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_taxiu_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/taxiu_recommend_icon"
            app:layout_constraintBottom_toBottomOf="@id/tv_hint"
            app:layout_constraintTop_toTopOf="@id/tv_hint" />

        <TextView
            android:id="@+id/tv_hint"
            style="@style/TitleTextStyle"
            android:layout_marginLeft="4dp"
            android:text="它秀推荐"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/icon" />

    </android.support.constraint.ConstraintLayout>


    <android.support.v7.widget.CardView style="@style/HomeCardStyle">

        <com.ipd.taxiu.widget.TaxiuLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding" />

    </android.support.v7.widget.CardView>

</LinearLayout>

