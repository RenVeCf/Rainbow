<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding">


    <TextView
        android:id="@+id/integral_title"
        style="@style/BaseTextStyle"/>

    <TextView
        android:id="@+id/integral_explain"
        style="@style/SmallTextStyle"
        android:layout_below="@id/integral_title" />

    <TextView
        android:id="@+id/integral_time"
        style="@style/SmallTextStyle"
        android:layout_below="@id/integral_explain"
        android:textColor="@color/text_gray" />

    <TextView
        android:id="@+id/integral_money"
        style="@style/BaseTextStyle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
    <View
        style="@style/ViewLine"
        android:layout_below="@id/integral_time"
        android:layout_marginTop="@dimen/base_padding"/>

</RelativeLayout>