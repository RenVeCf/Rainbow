<?xml version="1.0" encoding="utf-8"?>
<com.ipd.rainbow.widget.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <include
            android:id="@+id/layout_banner"
            layout="@layout/layout_store_banner"
            app:layout_constraintTop_toTopOf="parent" />


        <com.ipd.rainbow.widget.ProductExtraLayout
            android:id="@+id/rl_product_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_banner" />

        <TextView
            android:id="@+id/tv_cart_product_name"
            style="@style/TitleTextStyle"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_marginRight="@dimen/base_padding"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="法国皇家ROYAL CANIN A3优选幼犬粮哺乳期母犬及幼犬适用 3kg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_product_extra" />

        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/tv_cart_product_name"
            app:layout_constraintRight_toRightOf="@id/tv_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_product_name"
            app:layout_goneMarginTop="0dp">

            <TextView
                style="@style/SmallTextStyle"
                android:text="￥"
                android:textColor="#EA1C41" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TitleTextStyle"
                android:text="63"
                android:textColor="#EA1C41"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_old_price"
                style="@style/BaseTextStyle"
                android:layout_marginLeft="20dp"
                android:text="￥83"
                android:textColor="@color/LightGrey" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="@id/tv_cart_product_name"
            app:layout_constraintRight_toRightOf="@id/tv_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/ll_price">

            <TextView
                android:id="@+id/tv_express_fee"
                style="@style/SmallTextStyle"
                android:text="快递：免运费"
                android:textColor="@color/LightGrey" />

            <TextView
                android:id="@+id/tv_sales"
                style="@style/SmallTextStyle"
                android:layout_centerHorizontal="true"
                android:text="月销528件"
                android:textColor="@color/LightGrey" />

            <TextView
                android:id="@+id/tv_ship_address"
                style="@style/SmallTextStyle"
                android:layout_alignParentRight="true"
                android:text="浙江杭州"
                android:textColor="@color/LightGrey" />


        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            style="@style/ViewLine"
            android:layout_height="10dp"
            android:layout_marginTop="@dimen/small_padding"
            app:layout_constraintLeft_toLeftOf="@id/tv_cart_product_name"
            app:layout_constraintRight_toRightOf="@id/tv_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/rl_address" />


        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/small_padding"
            android:visibility="gone"
            android:paddingBottom="@dimen/small_padding"
            app:layout_constraintLeft_toLeftOf="@id/tv_cart_product_name"
            app:layout_constraintRight_toRightOf="@id/tv_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_goneMarginBottom="10dp"
            app:layout_goneMarginTop="0dp">

            <TextView
                style="@style/SmallTextStyle"
                android:text="优惠"
                android:textColor="@color/LightGrey" />

            <LinearLayout
                android:id="@+id/ll_coupon_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">

            </LinearLayout>

            <TextView
                style="@style/SmallTextStyle"
                android:drawableRight="@mipmap/arrow_right"
                android:drawablePadding="5dp"
                android:text="领券"
                android:textColor="@color/LightGrey" />


        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#EFF3F6"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/base_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_coupon">

            <LinearLayout
                android:id="@+id/ll_service1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ll_service2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/product_service1" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:layout_marginLeft="5dp"
                    android:text="七天退换"
                    android:textColor="@color/LightGrey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@id/ll_service1"
                app:layout_constraintRight_toLeftOf="@id/ll_service3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/product_service2" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:layout_marginLeft="5dp"
                    android:text="极速退货"
                    android:textColor="@color/LightGrey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toRightOf="@id/ll_service2"
                app:layout_constraintRight_toLeftOf="@id/ll_service4">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/product_service3" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:layout_marginLeft="5dp"
                    android:text="正品保证"
                    android:textColor="@color/LightGrey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@id/ll_service3"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/product_service4" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:layout_marginLeft="5dp"
                    android:text="提供发票"
                    android:textColor="@color/LightGrey" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>


        <LinearLayout
            android:id="@+id/layout_option_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/cl_service">

            <include layout="@layout/layout_option_package" />

            <View
                android:id="@+id/view_line2"
                style="@style/ViewLine"
                android:layout_height="@dimen/base_padding"
                android:background="@color/window_bg_color"
                app:layout_constraintTop_toBottomOf="@id/layout_option_package" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_evaluate_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/base_padding"
            app:layout_constraintTop_toBottomOf="@id/layout_option_package">

            <TextView
                android:id="@+id/tv_evaluate_num"
                style="@style/BaseTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="商品评价（4672）" />

            <TextView
                style="@style/SmallTextStyle"
                android:text="好评率"
                android:visibility="gone"
                android:textColor="@color/LightGrey" />

            <TextView
                android:id="@+id/tv_evaluate_percent"
                style="@style/SmallTextStyle"
                android:visibility="gone"
                android:layout_marginLeft="4dp"
                android:textColor="@color/red"
                tools:text="98%" />

        </LinearLayout>

        <View
            android:id="@+id/view_line3"
            style="@style/ViewLine"
            app:layout_constraintTop_toBottomOf="@id/ll_evaluate_header" />


        <LinearLayout
            android:id="@+id/fl_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/view_line3">

            <include layout="@layout/item_product_evaluate" />


            <RelativeLayout
                android:id="@+id/rl_all_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@drawable/shape_order_btn_cancel"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_all_evaluate"
                    style="@style/SmallTextStyle"
                    android:text="查看全部评价" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_all_evaluate"
                    android:src="@mipmap/all_evaluate_icon" />


            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:background="@color/window_bg_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@id/fl_evaluate">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/paging_icon" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_marginLeft="6dp"
                android:text="向上滑动，查看图文详情"
                android:textColor="@color/LightGrey" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</com.ipd.rainbow.widget.MyScrollView>
