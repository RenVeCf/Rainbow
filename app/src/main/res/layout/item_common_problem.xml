<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/base_padding">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何注册成平台用户？" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_down"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_detailed_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_item"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/small_padding"
        android:padding="@dimen/small_padding"
        android:background="@drawable/shape_comment_problem_bg"
        android:paddingTop="3dp"
        android:text="您好,拼团失败后，系统会在1~2个工作日将已支付的款项退还到您的余额中。"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone"/>
</RelativeLayout>
