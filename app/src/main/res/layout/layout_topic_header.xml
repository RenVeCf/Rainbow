<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.ipd.taxiu.widget.RoundImageView
        android:id="@+id/iv_topic_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_image_height"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding"
        android:layout_marginTop="@dimen/base_padding"
        android:scaleType="centerCrop"
        android:src="@mipmap/hot_topic_img"
        app:corner_radius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:type="round" />

    <TextView
        android:id="@+id/tv_topic_title"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/small_padding"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="哪一刻让你觉得铲屎官不好当？"
        app:layout_constraintLeft_toLeftOf="@id/iv_topic_image"
        app:layout_constraintTop_toBottomOf="@id/iv_topic_image" />

    <TextView
        android:id="@+id/tv_topic_desc"
        style="@style/SmallTextStyle"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/small_padding"
        android:text="对很多第一次晋升铲屎官的人来说，既当爹又当妈的照顾毛孩子并不轻松\n对很多第一次晋升铲屎官的人来说，既当爹又当妈的照顾毛孩子并不轻松\n对很多第一次晋升铲屎官的人来说，既当爹又当妈的照顾毛孩子并不轻松\n"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@id/iv_topic_image"
        app:layout_constraintRight_toRightOf="@id/iv_topic_image"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_title" />


    <TextView
        android:id="@+id/tv_topic_publish_time"
        style="@style/SmallTextStyle"
        android:layout_marginTop="@dimen/small_padding"
        android:text="03-27 14:42"
        android:textColor="@color/LightGrey"
        app:layout_constraintLeft_toLeftOf="@id/iv_topic_image"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_desc" />

    <TextView
        android:id="@+id/tv_viewers_num"
        style="@style/SmallTextStyle"
        android:drawableLeft="@mipmap/views_icon"
        android:drawablePadding="5dp"
        android:text="3452"
        android:textColor="@color/LightGrey"
        app:layout_constraintRight_toRightOf="@id/iv_topic_image"
        app:layout_constraintTop_toTopOf="@id/tv_topic_publish_time" />

    <ImageView
        android:id="@+id/iv_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/topic_detail_zan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topic_publish_time" />

    <TextView
        android:id="@+id/tv_zan"
        style="@style/BaseTextStyle"
        app:layout_constraintTop_toBottomOf="@id/iv_zan"
        android:text="232"
        android:textColor="@color/LightGrey"
        app:layout_constraintLeft_toLeftOf="@id/iv_zan"
        app:layout_constraintRight_toRightOf="@id/iv_zan" />

    <RelativeLayout
        android:layout_marginTop="@dimen/small_padding"
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_zan">

        <include layout="@layout/layout_share_menu" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        style="@style/ViewLine"
        android:layout_height="15dp"
        android:layout_marginTop="@dimen/base_padding"
        android:background="@color/window_bg_color"
        app:layout_constraintTop_toBottomOf="@id/rl_share" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_padding"
        app:layout_constraintLeft_toLeftOf="@id/iv_topic_image"
        app:layout_constraintRight_toRightOf="@id/iv_topic_image"
        app:layout_constraintTop_toBottomOf="@id/view_line">

        <ImageView
            android:id="@+id/iv_discuss_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/topic_discuss_icon" />

        <TextView
            style="@style/BaseTextStyle"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_toRightOf="@id/iv_discuss_icon"
            android:text="话题讨论" />

        <TextView
            style="@style/SmallTextStyle"
            android:layout_alignParentRight="true"
            android:text="324人参与了该话题的讨论"
            android:textColor="@color/LightGrey" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>