<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD6E6A"
        android:gravity="center"
        android:padding="@dimen/small_padding"
        android:textColor="@color/white"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tips"
        android:background="@color/white"
        android:padding="@dimen/base_padding">

        <TextView
            android:id="@+id/tv_original_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <EditText
            android:id="@+id/et_original_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_original_password"
            android:background="@null"
            android:hint="请输入原登录密码"
            android:password="true"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/tv_original_password"
            android:layout_marginTop="@dimen/base_padding"
            android:background="@color/full_screen_overlay" />

        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginTop="@dimen/base_padding"
            android:text="新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_new_password"
            android:background="@null"
            android:hint="请输入新登录密码"
            android:password="true"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/tv_new_password"
            android:layout_marginTop="@dimen/base_padding"
            android:background="@color/full_screen_overlay" />

        <TextView
            android:id="@+id/tv_affirm_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginTop="@dimen/base_padding"
            android:text="确认新密码："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <EditText
            android:id="@+id/et_affirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_affirm_new_password"
            android:background="@null"
            android:hint="请确认输入新登录密码"
            android:password="true"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_update_password"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding"
        android:layout_marginTop="@dimen/cart_operation_height"
        android:background="@drawable/shape_buy_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size" />

</RelativeLayout>