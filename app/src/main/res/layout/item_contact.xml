<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_friend_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding">


    <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
        android:id="@+id/civ_friend_header"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <TextView
        android:id="@+id/tv_friend_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_toRightOf="@id/civ_friend_header"
        android:textColor="@color/black"
        android:textSize="@dimen/base_text_size" />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_friend_nickname"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_marginTop="@dimen/small_padding"
        android:layout_toRightOf="@id/civ_friend_header"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/base_text_size" />


    <LinearLayout
        android:id="@+id/ll_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_padding"
        android:background="@drawable/selector_attention_bg"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/iv_attent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/selector_attention_image" />

        <TextView
            android:id="@+id/tv_attent"
            style="@style/BaseTextStyle"
            android:text="关注"
            android:textColor="@drawable/selector_attention_text_color" />

    </LinearLayout>


    <View
        style="@style/ViewLine"
        android:layout_width="match_parent"
        android:layout_below="@id/civ_friend_header"
        android:layout_marginTop="@dimen/base_padding" />
</RelativeLayout>