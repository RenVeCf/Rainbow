<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView style="@style/StoreCardStyle">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_radius">

            <ImageView
                android:id="@+id/iv_recommend_video_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/recommend_video_icon" />

            <TextView
                style="@style/BaseTextStyle"
                android:layout_marginLeft="@dimen/small_padding"
                android:text="推荐视频"
                app:layout_constraintBottom_toBottomOf="@id/iv_recommend_video_icon"
                app:layout_constraintLeft_toRightOf="@id/iv_recommend_video_icon"
                app:layout_constraintTop_toTopOf="@id/iv_recommend_video_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/iv_recommend_video_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_recommend_video_icon" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_recommend_video1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/cl_recommend_video2"
                app:layout_constraintTop_toBottomOf="@id/iv_recommend_video_icon">

                <com.ipd.taxiu.widget.RoundImageView
                    android:id="@+id/iv_recommend_video1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/store_recommend_video_height"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/recommend_video_img"
                    app:corner_radius="@dimen/base_radius"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:type="round" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/play_small"
                    app:layout_constraintBottom_toBottomOf="@id/iv_recommend_video1"
                    app:layout_constraintLeft_toLeftOf="@id/iv_recommend_video1"
                    app:layout_constraintRight_toRightOf="@id/iv_recommend_video1"
                    app:layout_constraintTop_toTopOf="@id/iv_recommend_video1" />

                <TextView
                    android:id="@+id/tv_viewers_num"
                    style="@style/SmallTextStyle"
                    android:layout_marginTop="@dimen/small_padding"
                    android:drawableLeft="@mipmap/video_viewers"
                    android:drawablePadding="5dp"
                    android:text="3242"
                    android:textColor="@color/LightGrey"
                    app:layout_constraintLeft_toLeftOf="@id/iv_recommend_video1"
                    app:layout_constraintTop_toBottomOf="@id/iv_recommend_video1" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:drawableLeft="@mipmap/video_duration"
                    android:drawablePadding="5dp"
                    android:text="02:23"
                    android:textColor="@color/LightGrey"
                    app:layout_constraintLeft_toRightOf="@id/tv_viewers_num"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toTopOf="@id/tv_viewers_num" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_recommend_video2"
                app:layout_constraintLeft_toRightOf="@id/cl_recommend_video1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_recommend_video_icon">

                <com.ipd.taxiu.widget.RoundImageView
                    android:id="@+id/iv_recommend_video2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/store_recommend_video_height"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/recommend_video_img"
                    app:corner_radius="@dimen/base_radius"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:type="round" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/play_small"
                    app:layout_constraintBottom_toBottomOf="@id/iv_recommend_video2"
                    app:layout_constraintLeft_toLeftOf="@id/iv_recommend_video2"
                    app:layout_constraintRight_toRightOf="@id/iv_recommend_video2"
                    app:layout_constraintTop_toTopOf="@id/iv_recommend_video2" />

                <TextView
                    android:id="@+id/tv_viewers_num2"
                    style="@style/SmallTextStyle"
                    android:layout_marginTop="@dimen/small_padding"
                    android:drawableLeft="@mipmap/video_viewers"
                    android:drawablePadding="5dp"
                    android:text="3242"
                    android:textColor="@color/LightGrey"
                    app:layout_constraintLeft_toLeftOf="@id/iv_recommend_video2"
                    app:layout_constraintTop_toBottomOf="@id/iv_recommend_video2" />

                <TextView
                    style="@style/SmallTextStyle"
                    android:drawableLeft="@mipmap/video_duration"
                    android:drawablePadding="5dp"
                    android:text="02:23"
                    android:textColor="@color/LightGrey"
                    app:layout_constraintLeft_toRightOf="@id/tv_viewers_num2"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toTopOf="@id/tv_viewers_num2" />


            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>

