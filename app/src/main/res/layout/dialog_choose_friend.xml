<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pay_way_bg"
    android:padding="@dimen/base_padding">

    <LinearLayout
        android:id="@+id/ll_invite_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_share" />
        <TextView
            android:id="@+id/icon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_text_size"
            android:textColor="@color/black"
            android:text="选择的邀请好友"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_padding"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_way"
        android:layout_below="@id/ll_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/big_padding">

        <LinearLayout
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_padding"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_friend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_friend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信朋友圈"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_padding"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_padding"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_qzone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_qzone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:textSize="@dimen/base_text_size"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_padding"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/ll_share_way"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/base_padding">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay_close"
        android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>
