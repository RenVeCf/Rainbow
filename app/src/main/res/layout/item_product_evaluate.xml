<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_padding"
    android:background="@color/white"
    android:padding="@dimen/base_padding">
   <FrameLayout
       android:id="@+id/ll1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="173dp" />
       <TextView
           android:layout_width="35dp"
           android:layout_height="15dp"
           android:text="三张"
           android:gravity="center"
           android:textSize="11dp"
           android:textColor="#FFFFFF"
           android:background="@drawable/btmkec2"
           android:layout_marginRight="25dp"
           android:layout_marginBottom="25dp"
           android:layout_gravity="right|bottom"
           />
   </FrameLayout>
    <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        android:layout_height="20dp"
        tools:src="@mipmap/avatar_default" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/evaluate_avatar_size"
        android:layout_marginLeft="@dimen/small_padding"
        app:layout_constraintLeft_toRightOf="@id/civ_avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/civ_avatar">

        <TextView
            android:id="@+id/tv_username"
            style="@style/BaseTextStyle"
            android:text="领着**流浪"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_evaluate_time"
            style="@style/SmallTextStyle"
            android:visibility="gone"
            android:text="2018.03.24 13:21"
            android:textColor="@color/LightGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />




    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_answer_content"
        style="@style/BaseTextStyle"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@id/civ_avatar"
        tools:text="很大一包哦，快递很快，还没给狗狗吃，给狗狗换个品牌吃，看起来不错，吃了以后再来评价" />

    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/rating_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:starEmpty="@mipmap/evaluate_star"
        app:starFill="@mipmap/evaluate_star_checked"
        app:clickable="false"
        app:starImageHeight="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_content"
        app:starImageWidth="15dp" />

    <com.ipd.rainbow.widget.MediaRecyclerView
        android:id="@+id/image_recycler_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_content"
        app:layout_goneMarginTop="0dp" />


</android.support.constraint.ConstraintLayout>