<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pay_way_bg"
    android:padding="@dimen/base_padding">

    <LinearLayout
        android:id="@+id/ll_choose_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pay_way" />
        <TextView
            style="@style/BaseTextStyle"
            android:text="选择您的性别"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/small_padding"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_choose_sex"
        android:padding="@dimen/base_text_size">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_sex_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sex_boy"
                android:layout_centerHorizontal="true"/>
            <TextView
                style="@style/BaseTextStyle"
                android:text="男"
                android:layout_below="@id/iv_sex_boy"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/base_padding"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_sex_girl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sex_girl"
                android:layout_centerHorizontal="true"/>
            <TextView
                style="@style/BaseTextStyle"
                android:text="女"
                android:paddingTop="@dimen/base_padding"
                android:layout_below="@id/iv_sex_girl"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
