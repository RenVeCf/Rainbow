<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/base_padding">

    <ImageView
        android:id="@+id/iv_about_us_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/about_us_logo"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/iv_ta_xiu_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ta_xiu_pet"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_about_us_logo"/>
    <TextView
        android:id="@+id/company_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/base_text_size"
        android:layout_below="@id/iv_ta_xiu_pet"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_size"
        android:textColor="@color/text_gray"
        android:text="Copyright © 杭州华元宠物用品有限公司 版权所有"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/base_padding"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>