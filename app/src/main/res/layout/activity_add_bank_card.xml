<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base_padding">

        <TextView
            android:id="@+id/tv_card_type"
            style="@style/BaseTextStyle"
            android:text="银行卡类型:" />

        <TextView
            android:id="@+id/tv_choose_bank_type"
            style="@style/BaseTextStyle"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_card_type"
            android:hint="请选择您的银行卡类型"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right"
            android:layout_alignParentRight="true"/>

        <View
            android:id="@+id/line1"
            android:layout_below="@id/tv_card_type"
            style="@style/ViewLine"
            android:layout_marginTop="@dimen/base_padding"/>

        <TextView
            android:id="@+id/tv_card_code"
            style="@style/BaseTextStyle"
            android:text="银行卡号:"
            android:layout_below="@id/line1"
            android:layout_marginTop="@dimen/base_padding"/>

        <EditText
            android:id="@+id/et_bank_card_code"
            style="@style/BaseTextStyle"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_card_code"
            android:hint="请输入您的银行卡号"
            android:minEms="20"
            android:maxLength="23"
            android:inputType="number"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_below="@id/line1"
            android:background="@null"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/line2"
            android:layout_below="@id/tv_card_code"
            style="@style/ViewLine"
            android:layout_marginTop="@dimen/base_padding"/>

        <TextView
            android:id="@+id/tv_account_name"
            style="@style/BaseTextStyle"
            android:text="账户姓名:"
            android:layout_below="@id/line2"
            android:layout_marginTop="@dimen/base_padding"/>

        <EditText
            style="@style/BaseTextStyle"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_account_name"
            android:hint="请输入银行卡对应的真实姓名"
            android:minEms="10"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_below="@id/line2"
            android:background="@null"
            android:maxLength="10"
            android:textColor="@android:color/black" />
        <View
            android:id="@+id/line3"
            android:layout_below="@id/tv_account_name"
            style="@style/ViewLine"
            android:layout_marginTop="@dimen/base_padding"/>

        <TextView
            android:id="@+id/tv_opening_bank"
            style="@style/BaseTextStyle"
            android:text="开户行:"
            android:layout_below="@id/line3"
            android:layout_marginTop="@dimen/base_padding"/>

        <EditText
            style="@style/BaseTextStyle"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/tv_opening_bank"
            android:hint="如：中国银行明珠路支行"
            android:minEms="20"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_below="@id/line3"
            android:background="@null"
            android:maxLength="30"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/base_padding"
        android:background="@drawable/shape_buy_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size"
        android:layout_marginTop="80dp"/>

</RelativeLayout>