<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView style="@style/HomeCardStyle">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding">
            <TextView
                android:id="@+id/tv_taxiu_name"
                style="@style/TitleTextStyle"
                android:layout_marginLeft="@dimen/small_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="养一只非常粘人的波斯猫，是一种怎样的体验？"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_taxiu_lable"
                style="@style/SmallTextStyle"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_friend_lable"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/base_padding"
                android:paddingRight="@dimen/base_padding"
                android:paddingTop="3dp"
                android:text="波斯猫"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tv_taxiu_name" />


            <LinearLayout
                android:id="@+id/ll_friend_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_taxiu_lable">

                <com.ipd.taxiu.widget.RoundImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/taxiu_image"
                    app:corner_radius="12dp"
                    app:type="round"
                    android:layout_marginTop = "@dimen/base_padding"
                    android:layout_marginRight="@dimen/base_padding"
                    android:layout_marginBottom="@dimen/base_padding"/>

                <com.ipd.taxiu.widget.RoundImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/taxiu_image"
                    app:corner_radius="12dp"
                    app:type="round"
                    android:layout_marginTop="@dimen/base_padding"
                    android:layout_marginBottom="@dimen/base_padding"/>

                <com.ipd.taxiu.widget.RoundImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@mipmap/taxiu_image"
                    app:corner_radius="12dp"
                    app:type="round"
                    android:layout_marginTop="@dimen/base_padding"
                    android:layout_marginLeft="@dimen/base_padding"
                    android:layout_marginBottom="@dimen/base_padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/ll_friend_image">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/talk_avatar1" />

                    <TextView
                        style="@style/SmallTextStyle"
                        android:layout_marginLeft="4dp"
                        android:text="小辣椒" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/views_icon" />

                    <TextView
                        style="@style/SmallTextStyle"
                        android:layout_marginLeft="5dp"
                        android:text="3243"
                        android:textColor="@color/LightGrey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/taxiu_comment" />

                    <TextView
                        style="@style/SmallTextStyle"
                        android:layout_marginLeft="5dp"
                        android:text="3243"
                        android:textColor="@color/LightGrey" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/favorite_icon" />

                    <TextView
                        style="@style/SmallTextStyle"
                        android:layout_marginLeft="5dp"
                        android:text="3243"
                        android:textColor="@color/LightGrey" />

                </LinearLayout>

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>