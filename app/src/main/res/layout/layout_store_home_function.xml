<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingBottom="@dimen/base_padding">


    <ImageView
        android:id="@+id/iv_store_vip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/store_spell"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_store_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_padding"
        android:scaleType="fitXY"
        android:src="@mipmap/store_new"
        app:layout_constraintDimensionRatio="1w:0.6h"
        app:layout_constraintLeft_toRightOf="@id/iv_store_vip"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_store_vip" />

    <ImageView
        android:id="@+id/iv_store_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_padding"
        android:scaleType="fitXY"
        android:src="@mipmap/store_group_purchase"
        app:layout_constraintDimensionRatio="1:0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_store_stock"
        app:layout_constraintTop_toBottomOf="@id/iv_store_new" />

    <ImageView
        android:id="@+id/iv_store_stock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/small_padding"
        android:scaleType="fitXY"
        android:src="@mipmap/store_stock"
        app:layout_constraintBottom_toBottomOf="@id/iv_store_group"
        app:layout_constraintDimensionRatio="1:0.6"
        app:layout_constraintLeft_toRightOf="@id/iv_store_group"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>