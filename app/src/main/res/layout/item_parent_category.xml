<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_category_item"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_caregory_ischecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/category_checked"
        app:layout_constraintBottom_toBottomOf="@id/tv_parent_category"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_parent_category" />

    <TextView
        android:id="@+id/tv_parent_category"
        style="@style/BaseTextStyle"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="分类1"
        android:textColor="@drawable/selector_category_text"
        android:textSize="16sp" />


</android.support.constraint.ConstraintLayout>