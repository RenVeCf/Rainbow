<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/base_padding">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
            android:id="@+id/civ_my_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_header" />

        <TextView
            android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/civ_my_header"
            android:text="爱狗铲屎管"
            android:textSize="@dimen/base_text_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_name"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_toRightOf="@id/civ_my_header"
            android:text="推荐码:4556"
            android:textSize="@dimen/base_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/qr_code"
        android:layout_below="@id/rl_header"
        android:padding="@dimen/base_padding"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/btn_invite_friends"
        android:layout_width="@dimen/registration_date_item_height"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_qr_code"
        android:layout_marginTop="@dimen/base_padding"
        android:background="@drawable/shape_buy_bg"
        android:text="邀请好友"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_invite_friends"
        android:padding="@dimen/big_padding">
        <TextView
            android:id="@+id/tv_friend_list"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="好友列表"
            android:textSize="@dimen/base_text_size"
            android:textColor="@color/black"
            android:gravity="center"/>
        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/base_padding"
            android:layout_gravity="center_vertical"
            android:background="@color/full_screen_overlay"/>
        <TextView
            android:id="@+id/tv_recommend_earning"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="推荐收益"
            android:textSize="@dimen/base_text_size"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
