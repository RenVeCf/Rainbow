<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品金额："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"/>
        <TextView
            android:id="@+id/tv_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥208.00"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:layout_below="@id/tv_commodity_price"
            android:layout_marginTop="@dimen/base_padding"/>
        <TextView
            android:id="@+id/tv_commodity_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+￥00"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_commodity_price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券抵扣："
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:layout_below="@id/tv_commodity_freight"
            android:layout_marginTop="@dimen/base_padding"/>
        <TextView
            android:id="@+id/tv_discount_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-￥20.00"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_commodity_freight"/>

       <View
           android:id="@+id/line"
           android:layout_width="match_parent"
           android:layout_height="0.3dp"
           android:background="@color/province_line_border"
           android:layout_below="@id/tv_discount_coupon"
           android:layout_marginTop="@dimen/base_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_text_size"
            android:textColor="@color/black"
            android:text="订单实付金额："
            android:textStyle="bold"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_title_text_size"
            android:textColor="@color/colorPrimaryDark"
            android:text="￥188.00"
            android:textStyle="bold"
            android:layout_below="@id/line"
            android:layout_marginTop="@dimen/base_padding"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_padding"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="发票信息："
            android:textStyle="bold"
            android:textSize="@dimen/base_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/full_screen_overlay"
            android:text="个人"
            android:textSize="@dimen/base_text_size"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base_padding"
        android:layout_marginTop="@dimen/small_padding">
        <TextView
            android:id="@+id/order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="订单编号："
            android:textSize="@dimen/base_text_size"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="201807200000000"
            android:textSize="@dimen/base_text_size"
            android:layout_toRightOf="@id/order_code"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="复制"
            android:background="@drawable/shape_order_btn_cancel"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="@dimen/base_text_size"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/base_padding"
        android:paddingRight="@dimen/base_padding"
        android:paddingBottom="@dimen/base_padding">
        <TextView
            android:id="@+id/orders_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="下单时间："
            android:textSize="@dimen/base_text_size"/>
        <TextView
            android:id="@+id/tv_orders_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="2018.07.20 14:29"
            android:layout_toRightOf="@id/orders_time"
            android:textSize="@dimen/base_text_size"/>
    </RelativeLayout>

</LinearLayout>
