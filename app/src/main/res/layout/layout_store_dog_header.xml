<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_store_banner" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_store_menu"
        style="@style/StoreCardStyle"
        app:layout_constraintTop_toBottomOf="@id/cl_banner">

        <include layout="@layout/layout_store_menu" />


    </android.support.v7.widget.CardView>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_dog_pent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        app:layout_constraintLeft_toLeftOf="@id/cv_store_menu"
        app:layout_constraintRight_toRightOf="@id/cv_store_menu"
        app:layout_constraintTop_toBottomOf="@id/cv_store_menu">


        <FrameLayout
            android:id="@+id/fl_small_dog"
            android:layout_width="0dp"
            android:layout_height="@dimen/store_dog_pent_img_height"
            android:layout_marginRight="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fl_big_dog">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/small_dog" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_store_pet_kind_bg" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:text="小型犬专区"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_big_dog"
            android:layout_width="0dp"
            android:layout_height="@dimen/store_dog_pent_img_height"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toRightOf="@id/fl_small_dog"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/big_dog" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_store_pet_kind_bg" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:text="中大型犬专区"
                android:textColor="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_young_dog"
            android:layout_width="0dp"
            android:layout_height="@dimen/store_dog_pent_img_height"
            android:layout_marginTop="@dimen/small_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fl_small_dog">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/young_dog" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_store_pet_kind_bg" />

            <TextView
                style="@style/SmallTextStyle"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginTop="@dimen/small_padding"
                android:text="幼犬专区"
                android:textColor="@color/white" />
        </FrameLayout>


    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_special"
        style="@style/StoreCardStyle"
        app:layout_constraintTop_toBottomOf="@id/cl_dog_pent">

        <include layout="@layout/layout_store_home_function" />

    </android.support.v7.widget.CardView>



    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_special">

        <include layout="@layout/layout_store_small_banner" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>