<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding"
    android:id="@+id/rl_exchange_record">


    <ImageView
        android:id="@+id/iv_exchange_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exchange_record" />

    <TextView
        android:id="@+id/tv_exchange_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_toRightOf="@id/iv_exchange_header"
        android:text="20元 全品类优惠券"
        android:textColor="@color/black"
        android:textSize="@dimen/base_text_size" />

    <TextView
        android:id="@+id/tv_exchange_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_exchange_title"
        android:layout_marginLeft="@dimen/base_padding"
        android:layout_toRightOf="@id/iv_exchange_header"
        android:text="兑换时间: 2018.07.25 12:00"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/base_text_size"
        android:layout_marginTop="@dimen/small_padding"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/arrow_right"
        android:layout_centerVertical="true"/>
    <View
       style="@style/ViewLine"
        android:layout_below="@id/tv_exchange_time"
        android:layout_marginTop="@dimen/base_padding"/>
</RelativeLayout>