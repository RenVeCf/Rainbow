<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/order_detail_bg"
        android:padding="@dimen/base_padding">

        <ImageView
            android:id="@+id/iv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/base_padding" />

        <TextView
            android:id="@+id/tv_group_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/base_padding"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/base_padding">

        <ImageView
            android:id="@+id/iv_delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/delivery_address" />

        <TextView
            android:id="@+id/tv_delivery_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/iv_delivery_address"
            android:text="@string/delivery_address"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_delivery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_delivery_address"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_toRightOf="@id/iv_delivery_address"
            android:text="黄埔正雄"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_delivery_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_delivery_address"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_toRightOf="@id/tv_delivery_name"
            android:text="176****5640"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_delivery_phone"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_delivery_address"
            android:text="上海 上海市 青浦区 华徐公路888号1号楼2楼"
            android:textColor="@color/black"
            android:textSize="@dimen/base_text_size" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/address_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        android:background="@color/white"
        android:padding="@dimen/base_padding">

        <ImageView
            android:id="@+id/iv_group_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_padding"
            android:layout_toRightOf="@id/iv_group_status"
            android:text="5人团，3人已参团"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_padding"
            android:text="00"
            android:background="@drawable/shape_time_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_second_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_toLeftOf="@id/tv_second"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_toLeftOf="@id/tv_second_symbol"
            android:text="00"
            android:background="@drawable/shape_time_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_minute_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_toLeftOf="@id/tv_minute"
            android:text=":"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/base_text_size" />

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_minute_symbol"
            android:text="00"
            android:background="@drawable/shape_time_bg"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/base_text_size" />

        <LinearLayout
            android:id="@+id/ll_group_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hour"
            android:layout_marginTop="@dimen/small_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/my_pet_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/my_pet_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/my_pet_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/add_image_group" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <com.ipd.jumpbox.jumpboxlibrary.widget.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/add_image_group" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/btn_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_text_size"
            android:textColor="@color/white"
            android:text="邀请好友来参团"
            android:layout_below="@id/ll_group_info"
            android:layout_marginTop="@dimen/base_padding"
            android:background="@drawable/shape_buy_bg"
            android:gravity="center"
            android:paddingTop="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/commodity_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_text_size"
        android:background="@color/white"
        android:padding="@dimen/small_padding"
        android:text="共1件商品"
        android:textSize="@dimen/base_text_size"
        android:textStyle="bold" />
</LinearLayout>
