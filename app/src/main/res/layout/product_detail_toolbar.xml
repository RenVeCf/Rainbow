<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:navigationIcon="@mipmap/back"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/base_padding"
        android:src="@mipmap/back" />

    <LinearLayout
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl_product"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BaseTextStyle"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="商品"
                android:textColor="@drawable/selector_product_detail_tab_text_color" />

            <View
                style="@style/ViewLine"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimaryDark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BaseTextStyle"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="详情"
                android:textColor="@drawable/selector_product_detail_tab_text_color" />

            <View
                style="@style/ViewLine"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimaryDark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_evaluate"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/BaseTextStyle"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="评价"
                android:textColor="@drawable/selector_product_detail_tab_text_color" />

            <View
                style="@style/ViewLine"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimaryDark" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_share"
        android:gravity="center"
        android:paddingRight="@dimen/base_padding"
        android:src="@mipmap/product_detail_cart_icon" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="@dimen/base_padding"
        android:src="@mipmap/menu_share_icon" />


</RelativeLayout>


