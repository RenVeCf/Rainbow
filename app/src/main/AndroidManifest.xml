<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ipd.taxiu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />


    <application
        android:name=".platform.global.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity-alias
            android:name=".launcher"
            android:targetActivity=".ui.activity.account.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask" />

        <!-- account-->
        <activity android:name=".ui.activity.account.LoginActivity" />
        <activity android:name=".ui.activity.account.PhoneLoginActivity" />
        <activity android:name=".ui.activity.account.RegisterActivity" />
        <activity android:name=".ui.activity.account.LostPwdActivity" />
        <activity android:name=".ui.activity.account.PetStageActivity" />
        <activity android:name=".ui.activity.account.PetKindActivity" />
        <activity android:name=".ui.activity.account.PetKindListActivity" />

        <!-- topic-->
        <activity android:name=".ui.activity.topic.TopicIndexActivity" />
        <activity android:name=".ui.activity.topic.TopicDetailActivity" />
        <activity android:name=".ui.activity.topic.PublishTopicCommentActivity" />
        <activity android:name=".ui.activity.topic.TopicPeopleCommentActivity" />
        <activity android:name=".ui.activity.topic.MoreCommentActivity" />

        <!-- talk-->
        <activity android:name=".ui.activity.talk.TalkIndexActivity" />
        <activity android:name=".ui.activity.talk.TalkDetailActivity" />
        <activity android:name=".ui.activity.talk.PublishTalkActivity" />

        <!-- classRoom-->
        <activity android:name=".ui.activity.classroom.ClassRoomIndexActivity" />
        <activity android:name=".ui.activity.classroom.ClassRoomDetailActivity" />
        <activity android:name=".ui.activity.classroom.OwnedClassRoomActivity" />

        <!-- taxiu-->
        <activity android:name=".ui.activity.taxiu.TaxiuDetailActivity" />


        <!-- trade-->
        <activity android:name=".ui.activity.trade.ConfirmOrderActivity" />


        <!-- 裁剪-->
        <activity android:name=".ui.activity.CropActivity" />
        <activity android:name=".ui.activity.PhotoSelectActivity" />
        <activity
            android:name=".ui.activity.PictureLookActivity"
            android:theme="@style/FullScreenStyle" />

        <!-- 订单 -->
        <activity android:name=".ui.activity.order.MyOrderActivity"/>
        <activity android:name=".ui.activity.order.OrderDetailActivity"/>
        <activity android:name=".ui.activity.order.LogisticsDetailActivity"/>
        <activity android:name=".ui.activity.order.EvaluateActivity"/>
        <activity android:name=".ui.activity.order.RequestReturnActivity"/>
        <activity android:name=".ui.activity.order.RequestReturnMoneyActivity"/>
        <activity android:name=".ui.activity.order.ReturnMoneyCommodityActivity"/>
        <activity android:name=".ui.activity.order.ReturnDetailActivity"/>
        <activity android:name=".ui.activity.order.ReturnRecordDetailActivity"/>
        <activity android:name=".ui.activity.order.ExpressInfoActivity"/>
    </application>

</manifest>